<%- include("partials/header") -%>

<h1>Compose</h1>

<form action="/compose" method="POST">
    <div class="form-group">
        <label for="Title" class="form-label">Title</label>
        <input type="text"  class="form-control" name="postTitle" id="Title">
    </div>
    

    <div class="form-group">
        <label for="Content" class="form-label">Post</label>
        <textarea type="text" name="postBody" id="Content" class="form-control" rows="5"></textarea>
    </div>

    <div class="col-12">
        <button type="submit" name="button" class="btn btn-primary">Publish</button>
    </div>
</form>

<%- include("partials/footer") -%>